<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="MiniBook" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.minibook.model.entity.Usuario</class>
		<class>com.minibook.model.entity.DadosUsuario</class>
		<class>com.minibook.model.entity.EnderecoUsuario</class>
		<class>com.minibook.model.entity.FotosUsuario</class>
		<class>com.minibook.model.entity.PostUsuario</class>
		<class>com.minibook.model.entity.RelacaoUsuario</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/puc" />
			<property name="javax.persistence.jdbc.password" value="heredia" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="eclipselink.logging.level.sql" value="FINE" />
		</properties>
	</persistence-unit>
</persistence>
